<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<p>
  <strong>Title: </strong>
  <%= @question.title %><br>
  <strong>Description: </strong>
  <%= @question.description %><br>
  <strong>Created At: </strong>
  <%= @question.created_at %><br>
  <% if @question.created_at != @question.updated_at %>
    <strong>Updated At: </strong>
    <%= @question.updated_at %><br>
  <% end %>
  
  <br>
  <% if !@answers.blank? %>
    <strong>Answers: </strong>
    <ol>
      <% @answers.each do |a, index| %>
        <li><%= a.description %></li>
      <% end %>
    </ol>
  <% end %>
</p>

<%= render 'answers/form' %>

<h3><%= link_to "Question Index", questions_path %></h3>
