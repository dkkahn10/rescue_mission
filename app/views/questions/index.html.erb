<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<h2>Questions</h2>

<ul>
  <% @questions.each do |question| %>
  <li>
    <%= link_to question.title, question_path(question) %>
    <%= question.description %>
    <%= question.created_at %>
    <% if question.created_at != question.updated_at %>
      <%= question.updated_at %>
    <% end %>
  </li>
  <% end %>
</ul>

<h3><%= link_to "New Question Form", new_question_path %></h3>
